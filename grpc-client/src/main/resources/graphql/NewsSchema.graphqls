type Query {
    newsById(id: ID): News
}

type Mutation {
    addNews(newsInput: NewsInput): News
}

input NewsInput {
    name: String!
    pageCount: Int
    authorId: ID!
}

type News {
    id: ID
    name: String
    pageCount: Int
    author: Author
}

type Author {
    id: ID
    firstName: String
    lastName: String
}